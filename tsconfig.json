{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es6",
		"outDir": "out",
		"lib": [
			"es6",
            "dom"
		],
		"sourceMap": true,
		"rootDir": "src",
		"strict": true,   /* enable all strict type-checking options */
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"types": [
			"node",
			"vscode",
			"vscode-notebook-renderer",
			"@vscode/jupyter-extension"
		]
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules",
		".vscode-test",
		"examples"
	]
}
